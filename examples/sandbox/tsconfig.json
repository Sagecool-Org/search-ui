{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
